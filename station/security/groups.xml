<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <record model="ir.module.category" id="category_station">
            <field name="name">Stations</field>
            <field name="description">HAM Radio Stations</field>
            <field name="sequence">1</field>
        </record>

        <record model="res.groups" id="group_station_viewer">
            <field name="name">Can view stations</field>
            <field name="category_id" ref="category_station"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <record model="res.groups" id="group_station_manager">
            <field name="name">Can manages stations</field>
            <field name="category_id" ref="category_station"/>
            <field name="implied_ids" eval="[(4, ref('station.group_station_viewer'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

    </data>
</odoo>
